global !p

from latex_.scopes import math

endglobal


################################################################################
#                                                                              #
#                                     Sets                                     #
#                                                                              #
################################################################################

# in  -> \in
# not -> \not
context "math()"
snippet "(in|not)" "In and Not" ir
\\`!p
snip.rv = match.group(1)
`
endsnippet

# OO -> \emptyset
context "math()"
snippet OO "Empty" Ai
\emptyset
endsnippet

# cc -> \subset
context "math()"
snippet SS "subset" Ai
\subset
endsnippet

# Cc -> \subseteq
context "math()"
snippet Cc "Sub Set Equal" wA
\\subseteq
endsnippet

# set -> \{  \}
context "math()"
snippet set "Set" w
\left\\{${1:x}${2: \in ${3:\mathbb{R}}}${4: \mid ${5:P(x)}}\right\\}$0
endsnippet

# up -> \cup
context "math()"
snippet up "Cup" iAw
\cup
endsnippet

# UP -> \bigcup
context "math()"
snippet UP "Bigcup" iAw
\bigcup
endsnippet

# ap -> \cap
context "math()"
snippet ap "Cap" iAw
\cap
endsnippet

# AP -> \bigcap
context "math()"
snippet AP "Bigcap" iAw
\bigcap
endsnippet

